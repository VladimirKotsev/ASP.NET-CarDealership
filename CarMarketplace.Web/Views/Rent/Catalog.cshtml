@model ICollection<RentPostViewModel>

@{
    ViewData["Title"] = "Rental Cars";
    ViewData["CloudDomain"] = "https://res.cloudinary.com/carmarketplace/image/upload/";
    var imageSrc = "";
}

<div class="mt-5">
    <div class="d-grid gap-2 col-6 mx-auto text-center mt-5">
        <h1>@ViewData["Title"]</h1>
    </div>
    @if (Model.Count == 0)
    {
        <div class="text-center mt-4">
            <img src="/img/Sad_car.png">
        </div>
    }
    @foreach (var post in Model)
    {
        imageSrc = ViewData["CloudDomain"] + @post.ImagePublicId;
        <div class="border rounded shadow bg-white p-4 mb-4 mt-4">
            <a asp-controller="SalePost" asp-action="Details" asp-route-id="@post.Id" class="row text-decoration-none text-black">
                <div class="col-4">
                        <img src="@imageSrc" class="card-img-result rounded" alt="@post.Car.Make.Name @post.Car.Model.ModelName">
                </div>
                <div class="col-4 d-flex flex-column align-items-between mt-4">
                    <span class="fs-4"><i class="fa fa-suitcase text-primary" aria-hidden="true"></i> @post.Car.BootCapacity liters</span>
                    <br>
                    <span class="fs-4"><i class="fa fa-users text-primary" aria-hidden="true"></i> @post.Car.Seats seats</span>
                    <br>
                    <span class="fs-4"><i class="fa fa-map-marker" aria-hidden="true"></i> @post.Lender.City.CityName</span>
                </div>
                <div class="col-4 position-relative">
                    <div class="d-flex flex-column align-items-between mt-4">
                        <span class="fs-4"><i class="fa fa-suitcase text-primary" aria-hidden="true"></i> @post.Car.BootCapacity liters</span>
                        <br>
                        <span class="fs-4"><i class="fa fa-users text-primary" aria-hidden="true"></i> @post.Car.Seats seats</span>
                        <br>
                        <span class="fs-4"><i class="fa fa-map-marker" aria-hidden="true"></i> @post.Lender.City.CityName</span>
                    </div>
                    <div class="fst-italic border rounded-3 p-1 shadow bottom-right-div">
                        <span class="fs-3">Price per day</span>
                        <br>
                        <span class="fs-3 p-2">@post.PricePerDay<strong> BGN</strong></span>
                    </div>
                </div>
                <div class="row ps-2">
                    <h2 class="card-title float-start col-6 mt-2">@post.Car.Make.Name @post.Car.Model.ModelName</h2>
                </div>
            </a>
        </div>
    }
</div>
