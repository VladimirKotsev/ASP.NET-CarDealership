@model ICollection<SalePostViewModel>

@{
    ViewData["CloudDomain"] = "https://res.cloudinary.com/carmarketplace/image/upload/";
    var imageSrc = "";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="my-4">Car Catalog</h1>
        </div>
        <div class="col-md-6 align-middle">
            <a asp-controller="Catalog" asp-action="Search" class="btn btn-primary mt-3 float-end">Search</a>
        </div>
    </div>

    <div class="row">
        @foreach (var post in Model.Take(3))
        {
            imageSrc = ViewData["CloudDomain"] + post.ImageUrls.Split(", ", StringSplitOptions.RemoveEmptyEntries).First();
            <a asp-controller="Catalog" asp-action="Details" asp-route-id="@post.Id" class="col-md-4 text-decoration-none">
                <div>
                    <div class="card mb-4">
                        <img src="@imageSrc" class="card-img-top" alt="@post.Car.CarName">
                        <div class="card-body">
                            <h3 class="card-title"><strong>@post.Car.CarName</strong></h3>
                            <hr>
                            <span class="card-text fs-2">Price: <span class="card-text fs-3 text-success">@post.Price</span> BGN</span>
                            <br>
                            <span class="card-text fs-3">Year: @post.Car.Year</span>
                            <br>
                            <p class="card-text fs-3">@post.Car.Province</p>
                            <span class="card-text fs-4">@post.PublishDate.ToString("HH:mm:ss MM/dd/yyyy")</span>
                            <br>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
    <div class="row">
        @foreach (var post in Model.Skip(3).Take(3))
        {
            imageSrc = ViewData["CloudDomain"] + post.ImageUrls.Split(", ", StringSplitOptions.RemoveEmptyEntries).First();
            <a asp-controller="Catalog" asp-action="Details" asp-route-id="@post.Id" class="col-md-4" style="text-decoration: none">
                <div>
                    <div class="card mb-4">
                        <img src="@imageSrc" class="card-img-top" alt="@post.Car.CarName">
                        <div class="card-body">
                            <h3 class="card-title"><strong>@post.Car.CarName</strong></h3>
                            <span class="card-text fs-3">Price: @post.Price lv.</span>
                            <br>
                            <span class="card-text">Year: @post.Car.Year</span>
                            <br>
                            <p class="card-text">@post.Car.Province</p>
                            <span class="card-text">@post.PublishDate.ToString("HH:mm:ss MM/dd/yyyy")</span>
                            <br>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>


