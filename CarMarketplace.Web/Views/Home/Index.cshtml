@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="fs-3">Here you can browse for the perfect car</p>
</div>

<div id="carouselExampleIndicators" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner carousel-fade">
        <div class="carousel-item active">
            <a asp-controller="Catalog" asp-action="Results" asp-route-group="german">
                <img src="/img/German-group-banner.png" class="d-block w-100 rounded img-fluid banner" alt="...">
            </a>
            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                <div class="p-3" style="max-width: 900px;">
                    <p class="fs-4 text">Experience the pinnacle of engineering and luxury with German cars. Impeccable craftsmanship, cutting-edge technology, and unmatched performance come together to create an exhilarating driving experience. Discover a world of automotive excellence with our iconic German cars.</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <a asp-controller="Catalog" asp-action="Results" asp-route-group="japan">
                <img src="~/img/Japan-group-banner.png" class="d-block w-100 rounded img-fluid banner" alt="...">
            </a>
            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                <div class="p-3" style="max-width: 900px;">
                    <p class="fs-4 text">Discover the epitome of engineering excellence with Japan cars. Immerse yourself in cutting-edge technology, unmatched reliability, and sleek design that captures both the heart and mind. Elevate your driving experience and embrace the future of mobility with Japan cars.</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <a asp-controller="Catalog" asp-action="Results" asp-route-group="italian">
                <img src="~/img/Italy-group-banner.png" class="d-block w-100 rounded img-fluid banner" alt="...">
            </a>
            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                <div class="p-3" style="max-width: 900px;">
                    <p class="fs-4 text">Discover the allure of Italy's finest cars, where passion meets precision. Immerse yourself in the elegance of iconic designs, cutting-edge technology, and exhilarating performance. Experience the art of driving at its finest with Italy cars, where every journey becomes a symphony of style and engineering mastery.</p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>